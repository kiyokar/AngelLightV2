})

MainTab:AddButton({
    Name = "Freeze Trade",
    Callback = function()
        -- Function to freeze trade
    end    
})

MainTab:AddButton({
    Name = "Hide Godlies",
    Callback = function()
        -- Function to hide godlies
    end    
})

MainTab:AddToggle({
    Name = "Force Accept",
    Default = false,
    Callback = function(Value)
        -- Function to force accept trade
    end    
})

-- Add Misc Tab
local MiscTab = Window:MakeTab({
    Name = "Misc",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

MiscTab:AddButton({
    Name = "Copy Discord",
    Callback = function()
        setclipboard("https://discord.gg/eRVX2Qa3zc")  -- Discord invite link
    end    
})

-- Custom Notification and UI Initialization
AngelLightV2:MakeNotification({
    Name = "AngelLightV2 Loaded",
